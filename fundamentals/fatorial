package fundamentos;

import java.util.Scanner;

public class fatorial {

	public static void main(String[] args) {
		try (Scanner sc = new Scanner(System.in)) {
			int i, n, fator;
			System.out.print("Digite um n√∫mero: ");
			n = sc.nextInt();
			fator = 1;
			
			i = 1;
			for (;i<n+1;i++) {
				fator = i * fator;
			}
			System.out.println("Fatorial = "+ fator);
			
			sc.close();
		}
	}
}
